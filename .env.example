# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
# Default model for chat/generation
OLLAMA_MODEL=llama3 
# Default model for embeddings
OLLAMA_EMBED_MODEL=nomic-embed-text 
# OLLAMA_REQUEST_TIMEOUT=120 # Optional: Increase timeout for slow models

# Agent Configuration
# MODEL_NAME is now OLLAMA_MODEL
# Relevant for context window size
MAX_TOKENS=4096 
# TEMPERATURE: Relevant for generation randomness
TEMPERATURE=0.7

# Database configuration
DB_PATH=./data/memory.db

# Logging configuration
# DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO  
LOG_FILE=./logs/agent.log

# Document storage
DOCUMENT_DIR=./data/documents

# Web scraping configuration
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36
 # seconds 
REQUEST_TIMEOUT=30 

# Google Search API Configuration
# Get your API key from https://developers.google.com/custom-search/v1/introduction
# GOOGLE_SEARCH_API_KEY=your_api_key_here
# Create a custom search engine at https://programmablesearchengine.google.com/ and get its ID
# GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here 